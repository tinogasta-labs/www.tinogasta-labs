---
import config from '~/site-config.json'
import Container from './shared/Container.astro'

const links = [
  { to: '/', label: 'Home' },
  { to: '#services', label: 'Services' },
  { to: '#faq', label: 'FAQs' },
  { to: '#contact', label: 'Contact' },
]

const social = [
  { href: config.social.github, label: 'Github' },
  { href: `mailto:${config.social.email}`, label: 'Email' },
]
---

<footer
  class="border-fg/10 mt-16 border-t px-6 py-12 md:mt-24 md:px-8 lg:px-16"
>
  <Container>
    <div class="mb-12 grid gap-8 md:grid-cols-2">
      <div>
        <h1 class="mb-4 text-lg">Tinogasta Labs</h1>
        <p class="text-fg-muted">
          Building secure, high-performance applications for the community.
        </p>
      </div>

      <div class="grid grid-cols-2 gap-8">
        <div>
          <h2 class="mb-4 font-medium">Links</h2>
          <ul class="space-y-2">
            {
              links.map(link => (
                <li>
                  <a href={link.to} class="text-fg-muted">
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div>
          <h2 class="mb-4 font-medium">Connect</h2>
          <div class="flex flex-col gap-2">
            {
              social.map(link => (
                <a href={link.href} class="text-fg-muted">
                  {link.label}
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <div class="border-fg/10 text-fg-muted border-t pt-8 text-center text-sm">
      Thoogasta Labs - {new Date().getFullYear()}
    </div>
  </Container>
</footer>
