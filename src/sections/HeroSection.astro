---
import Container from '~/components/shared/Container.astro'
import { getTranslations } from '~/i18n'
import type { Language } from '~/i18n/types'
import config from '~/site-config.json'

type Props = {
  lang: Language
}

const { lang } = Astro.props
const t = getTranslations(lang)
---

<section class="mt-24 px-6 sm:mt-32 md:mt-56">
  <Container>
    <h1
      class="animate-fade-up text-4xl font-medium tracking-tight sm:text-[64px]"
      set:html={t['hero.title']}
    />
    <p
      class="text-fg-muted animate-fade-up mt-6 text-xl opacity-0"
      style={{ animationDelay: '0.15s', animationFillMode: 'forwards' }}
    >
      {t['hero.subtitle']}
    </p>
    <div
      class="animate-fade-up mt-12 flex items-center gap-4 opacity-0"
      style={{ animationDelay: '0.25s', animationFillMode: 'forwards' }}
    >
      <a
        href={`mailto:${config.social.email}?subject=Consulta%20sobre%20servicios`}
        class="border-canvas bg-canvas text-fg-inverted inline-flex h-12 cursor-pointer items-center rounded-full border px-6 text-sm"
        >{t['cta.contact']}</a
      >
      <a
        href={config.social.github}
        target="_blank"
        rel="noreferrer noopener"
        class="border-fg inline-flex h-12 cursor-pointer items-center rounded-full border px-6 text-sm"
      >
        {t['cta.contribute']}</a
      >
    </div>
  </Container>
</section>
