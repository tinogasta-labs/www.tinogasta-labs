---
import Container from '~/components/shared/Container.astro'
import Icon from '~/components/ui/Icon.astro'
import config from '~/site-config.json'
---

<section
  class="animate-fade-up mt-24 opacity-0 sm:mt-32 md:mt-56"
  id="contact"
  style={{ animationDelay: '0.3s', animationFillMode: 'forwards' }}
>
  <Container>
    <header class="mb-24 flex flex-col gap-4">
      <h1 class="text-2xl sm:text-4xl">Get in touch</h1>
      <p class="text-fg-muted text-xl font-light">
        Reach out to us or contribute to our open source projects.
      </p>
    </header>

    <div class="grid gap-6 md:grid-cols-2">
      <div class="group hover:bg-fg/10 border-fg/10 border transition-all">
        <a
          href={`mailto:${config.social.email}`}
          class="flex items-center gap-4 px-6 py-8"
        >
          <Icon name="envelope-closed" class="text-fg-muted/50 size-5" />
          <div class="flex-1">
            <h1>Email Us</h1>
            <p class="text-fg-muted">contact@tinogasta-labs.com</p>
          </div>
          <Icon name="external-link" class="text-fg-muted size-4" />
        </a>
      </div>
      <div class="group hover:bg-fg/10 border-fg/10 border transition-all">
        <a href={config.social.github} class="flex items-center gap-4 p-6">
          <Icon name="github-logo" class="text-fg-muted/50 size-5" />
          <div class="flex-1">
            <h1>Contribute</h1>
            <p class="text-fg-muted">@tinogasta-labs</p>
          </div>
          <Icon name="external-link" class="text-fg-muted size-4" />
        </a>
      </div>
    </div>
  </Container>
</section>
